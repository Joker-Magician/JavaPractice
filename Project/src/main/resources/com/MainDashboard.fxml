<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="museum.controller.MainDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #8B0000; -fx-padding: 0 20;" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-label" style="-fx-text-fill: white; -fx-font-size: 24px;" text="中华古建筑/非遗数字博物馆" />
            <HBox HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" prefWidth="300.0" promptText="搜索藏品..." />
            <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #FFD700; -fx-text-fill: #8B0000;" text="搜索" />
            <Label fx:id="welcomeLabel" text="你好" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" text="退出" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefWidth="200.0" spacing="10.0" style="-fx-background-color: #F8F8FF; -fx-padding: 20;" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="sub-header-label" text="浏览分类" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showAll" styleClass="menu-button" text="全部展示" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showHeritageOnly" styleClass="menu-button" text="非物质文化遗产" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showArchitectureOnly" styleClass="menu-button" text="古建筑展示" />
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
         <content>
            <VBox spacing="20.0" style="-fx-padding: 20;">
               <children>
                  <VBox fx:id="heritageSection" spacing="10.0">
                     <children>
                        <Label styleClass="header-label" style="-fx-font-size: 20px; -fx-text-fill: #2F4F4F;" text="非物质文化遗产" />
                        <ListView fx:id="heritageListView" prefHeight="250.0" style="-fx-background-color: white; -fx-border-color: #D2B48C;" />
                     </children>
                  </VBox>
                  <VBox fx:id="architectureSection" spacing="10.0">
                     <children>
                        <Label styleClass="header-label" style="-fx-font-size: 20px; -fx-text-fill: #2F4F4F;" text="中国古建筑" />
                        <ListView fx:id="architectureListView" prefHeight="250.0" style="-fx-background-color: white; -fx-border-color: #D2B48C;" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
