<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #F8F8FF;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="museum.controller.ArchitectureDetailController">
