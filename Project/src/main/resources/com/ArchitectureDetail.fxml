                  <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="dynastyLabel" styleClass="sub-header-label" text="朝代: " />
                  <Label fx:id="locationLabel" styleClass="sub-header-label" text="位置: " />
                  <Label fx:id="typeLabel" styleClass="sub-header-label" text="类型: " />
                  <Label fx:id="yearLabel" styleClass="sub-header-label" text="年份: " />
                  <Label styleClass="sub-header-label" text="简介:" />
                  <TextFlow>
                     <children>
                        <Text fx:id="descriptionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                  </TextFlow>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
