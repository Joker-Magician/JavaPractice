<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="museum.controller.AdminDashboardController">
   <top>
      <ToolBar prefHeight="60.0" prefWidth="1024.0" style="-fx-background-color: #8B0000;" BorderPane.alignment="CENTER">
         <items>
            <Label styleClass="header-label" style="-fx-text-fill: white; -fx-font-size: 24px;" text="博物馆后台管理系统" />
            <AnchorPane HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" text="欢迎管理员" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#handleLogout" text="退出登录" />
         </items>
      </ToolBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="非物质文化遗产管理">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ToolBar prefHeight="40.0" prefWidth="1024.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <items>
                            <Button mnemonicParsing="false" onAction="#handleAddHeritage" text="添加项目" />
                              <Button mnemonicParsing="false" onAction="#handleDeleteHeritage" text="删除选中" />
                              <AnchorPane prefWidth="50.0" />
                              <TextField fx:id="hSearchField" promptText="搜索名称/类别..." />
                              <Button mnemonicParsing="false" onAction="#handleHeritageSearch" text="搜索" />
                          </items>
                        </ToolBar>
                        <TableView fx:id="heritageTable" layoutY="40.0" prefHeight="636.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                          <columns>
                            <TableColumn fx:id="hIdCol" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="hNameCol" prefWidth="200.0" text="名称" />
                              <TableColumn fx:id="hCategoryCol" prefWidth="150.0" text="类别" />
                              <TableColumn fx:id="hRegionCol" prefWidth="150.0" text="地区" />
                              <TableColumn fx:id="hYearCol" prefWidth="100.0" text="年份" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="古建筑管理">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ToolBar prefHeight="40.0" prefWidth="1024.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <items>
                              <Button mnemonicParsing="false" onAction="#handleAddArchitecture" text="添加古建筑" />
                              <Button mnemonicParsing="false" onAction="#handleDeleteArchitecture" text="删除选中" />
                              <AnchorPane prefWidth="50.0" />
                              <TextField fx:id="aSearchField" promptText="搜索名称/朝代..." />
                              <Button mnemonicParsing="false" onAction="#handleArchitectureSearch" text="搜索" />
                           </items>
                        </ToolBar>
                        <TableView fx:id="architectureTable" layoutY="40.0" prefHeight="636.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                           <columns>
                              <TableColumn fx:id="aIdCol" prefWidth="50.0" text="ID" />
                              <TableColumn fx:id="aNameCol" prefWidth="200.0" text="名称" />
                              <TableColumn fx:id="aDynastyCol" prefWidth="150.0" text="朝代" />
                              <TableColumn fx:id="aTypeCol" prefWidth="150.0" text="类型" />
                              <TableColumn fx:id="aYearCol" prefWidth="100.0" text="年份" />
                           </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
